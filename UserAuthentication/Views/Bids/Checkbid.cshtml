@model IEnumerable<UserAuthentication.Models.Bid>

@{
    ViewBag.Title = "Checkbid";
}

<h2>Checkbid</h2>

<p>
    @Html.ActionLink("Create New", "Create")

</p>
@using (Html.BeginForm("Checkbid", "Bids", FormMethod.Get))
{

    <table class="table">
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.userId)
        </th>*@
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.projecId)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.projectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.setBid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.userId)
        </td>*@
        <td>
            @if (item.Picture != null)
            {
                <img src="~/Images/@item.Picture" name="Image" height="50" />
            }
            else
            {
                <img src="~/Images/no_profile.png" height="50" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.projecId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.projectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.setBid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skills)
        </td>
        <td>
            <a href="~/CV/@item.CV" target="_blank">@item.CV </a>
        </td>
        <td>
            @switch (item.Status)
            {
                case "Accepted":
                    <b style="color: darkgreen">@Html.DisplayFor(modelItem => item.Status)</b>
                    break;

                case "Rejected":
                    <b style="color:darkred">@Html.DisplayFor(modelItem => item.Status)</b>
                    break;
                default:
                    <b>@Html.DisplayFor(modelItem => item.Status)</b>
                    break;
            }
        </td>

        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
        }

    </table>
}
