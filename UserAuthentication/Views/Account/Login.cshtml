@using UserAuthentication.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    .h-custom {
        height: 100%;
    }
</style>

@*<h2>@ViewBag.Title.</h2>*@
<section class="vh-100">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <section class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-7">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                             class="img-responsive" alt="Sample image">
                    </div>
                    <div class="col-md-5">
                        <form>
                            <div style="margin-left:44px">
                                <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start"style=" display: flex; }">
                                    <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                                    <div style=" height: 15px; margin-top: 8px; margin-left: 8px;">
                                        <button type="button" class="btn btn-primary btn-floating mx-1">
                                            <i class="fab fa-facebook-f"></i>
                                        </button>

                                        <button type="button" class="btn btn-primary btn-floating mx-1">
                                            <i class="fab fa-twitter"></i>
                                        </button>

                                        <button type="button" class="btn btn-primary btn-floating mx-1">
                                            <i class="fab fa-linkedin-in"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <br />


                            <div class="divider d-flex align-items-center my-4" style="margin-right: 10%; margin-bottom: 0px; ">
                                <p class="text-center fw-bold mx-3 mb-0" style=" margin-right: 28%; font-weight: bold;">Or</p>
                            </div>
                            <br />
                            <div style="">

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group" style=" margin-left: 29px; ">
                                        @Html.LabelFor(m => m.UserName, new { @class = " control-label" })

                                        <div class="">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br>

                                <!-- Password input -->
                                <div class="form-outline mb-3" style=" display: grid; margin-left: 10%;">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @style = "right:30px; display: contents; " })
                                    <div class="" style=" margin-right: 55px;">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "margin-left:-17px" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />

                                <div class="d-flex justify-content-between align-items-center" style=" margin-left: 10%; }">
                                    <!-- Checkbox -->
                                    <br />
                                    <div class="form-check mb-0">
                                        <div class="checkbox " style="margin-left:0px">
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @style = "left:4px" })
                                            @Html.LabelFor(m => m.RememberMe, new { @style = "font-weight: bold; padding: revert;" })
                                        </div>
                                    </div>
                                    <a href="#!" class="text-body" style="left: 45px">Forgot password?</a>
                                </div>

                                <div class="text-center text-lg-start mt-4 pt-2" style=" margin-top: 12px; margin-right: 141px;">
                                    <input type="submit" value="Log in" class="btn btn-primary btn-lg" />
                                    <br />
                                    <br />

                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                        Don't have an account? <a href="@Url.Action("Register", "Account")" class="Register">Register</a>
                                    </p>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <!--<div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">-->
                <!-- Copyright -->
                <!--<div class="text-white mb-3 mb-md-0">
                    Copyright © 2020. All rights reserved.
                </div>-->
                <!-- Copyright -->
                <!-- Right -->
                <!--<div>
                    <a href="#!" class="text-white me-4">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#!" class="text-white me-4">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#!" class="text-white me-4">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#!" class="text-white">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>-->
                <!-- Right -->
            <!--</div>-->
        </section>

    }

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}