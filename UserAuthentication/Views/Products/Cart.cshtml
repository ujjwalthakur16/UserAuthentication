@model IEnumerable<UserAuthentication.Models.Products>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Discription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MRP)
        </th>
        
        <th>Total Items</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Picture != null)
            {

                <img class="card-img-top rounded" style="height: 64px; width: 53px;" src="~/Images/@item.Picture" />
            }
            else
            {
                <img class="card-img-top rounded" style=" height: 64px; width: 53px;" src="~/Images/No_Image.png" />
            }
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
       
        <td>
            @Html.DisplayFor(modelItem => item.Discription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MRP)
        </td>

        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }) |
            @Html.ActionLink("BAck To List", "Menu", new { id = item.SubCategoryId })

        </td>
    </tr>
}

</table>
